// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------

model User {
  id             Int               @id @default(autoincrement())
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  name           String?
  email          String            @unique
  hashedPassword String?
  role           String
  log            Log[]
  tokens         Token[]
  sessions       Session[]
  enquries       UsersOnEnquires[]
}

model UsersOnEnquires {
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  enquiry   Enquiry @relation(fields: [enquiryId], references: [id])
  enquiryId Int

  @@id([userId, enquiryId])
}

model Session {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Token {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  hashedToken String
  type        TokenType
  expiresAt   DateTime
  sentTo      String

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([hashedToken, type])
}

enum TokenType {
  RESET_PASSWORD
  INVITE_PASSWORD
}

model Enquiry {
  id                        Int                     @id @default(autoincrement())
  createdAt                 DateTime                @default(now())
  updatedAt                 DateTime                @updatedAt
  client_name               String
  client_mobile             BigInt
  client_email              String
  client_service            ClientServiceType
  client_qccupation_type    ClientOccupationType
  loan_amount               BigInt
  client_address            String
  private_enquiry           Boolean
  logs                      Log[]
  documents                 Document[]
  bank_queries              BankQuery[]
  case_status               CaseStatus[]
  sanction_and_disbursement SanctionDisbursment[]
  project_report            ProjectReport[]
  search_valuation_report   SearchValuationReport[]
  users                     UsersOnEnquires[]
}

model Log {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  type      String
  name      String
  Enquiry   Enquiry? @relation(fields: [enquiryId], references: [id])
  enquiryId Int?
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Document {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  client_name   String
  document_name String
  status        StatusType @default(NOT_UPLOAD)

  Enquiry   Enquiry? @relation(fields: [enquiryId], references: [id])
  enquiryId Int?
}

model ProjectReport {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  label     String
  status    StatusType
  remark    String?
  Enquiry   Enquiry?   @relation(fields: [enquiryId], references: [id])
  enquiryId Int?
}

model CaseStatus {
  id                 Int        @id @default(autoincrement())
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  bank_name          String
  status             StatusType
  response_from_bank Boolean
  final_login        String
  remark             String?
  Enquiry            Enquiry?   @relation(fields: [enquiryId], references: [id])
  enquiryId          Int?
}

model SearchValuationReport {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  document  String
  status    StatusType
  Enquiry   Enquiry?   @relation(fields: [enquiryId], references: [id])
  enquiryId Int?
}

model BankQuery {
  id           Int        @id @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  bank_query   String
  status       StatusType
  our_response String
  remark       String?

  Enquiry   Enquiry? @relation(fields: [enquiryId], references: [id])
  enquiryId Int?
}

model SanctionDisbursment {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  document  String
  status    StatusType
  Enquiry   Enquiry?   @relation(fields: [enquiryId], references: [id])
  enquiryId Int?
}

enum StatusType {
  UPLOADED
  NOT_UPLOAD
}

enum ClientServiceType {
  HOME_LOAN
  MORTGAGE_LOAN
  UNSECURED_LOAN
  MSME_LOAN
  STARTUP_LOAN
  SUBSIDY_SCHEMES
}

enum ClientOccupationType {
  SALARIED_INDIVIDUAL
  INDIVIDUAL
  SELF_EMPLOYED_INDIVIDUAL_OR_PROPRIETORSHIP
  PARTNERSHIP
  COMPANY
}
